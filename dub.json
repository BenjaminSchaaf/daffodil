{
    "name": "dil",
    "description": "D Imaging Library",
    "authors": ["Cameron Lonsdale"],
    "copyright": "Copyright Â© 2015, Cameron Lonsdale",
    "license": "GPL-2.0",
    "configurations": [
        {
            "name": "library",
        },
        {
            "name": "unittest",
            "targetType": "executable",
            "mainSourceFile": "bin/ut.d",
            "sourcePaths": ["source", "test"],
            "importPaths": ["source", "test"],
            "preBuildCommands": ["dub run unit-threaded -c gen_ut_main -- -f bin/ut.d"],
            "dependencies": {
                "unit-threaded": "~master"
            },
        },
        {
            "name": "docs",
            "targetType": "none",
            "preGenerateCommands": [
                "sphinx-build -E -b html docs build/html",
            ],
        },
    ],
}
